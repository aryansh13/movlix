# CinePulse Environment Configuration

# Application
NEXT_PUBLIC_APP_NAME=CinePulse
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=Platform Movie Discovery & Review Indonesia

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/cinepulse
# For development, we use JSON files in /data directory

# TMDB API (The Movie Database)
NEXT_PUBLIC_TMDB_API_KEY=your_tmdb_api_key_here
NEXT_PUBLIC_TMDB_BASE_URL=https://api.themoviedb.org/3

# Authentication (for future implementation)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Social Media APIs (for future implementation)
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_TWITTER_API_KEY=your_twitter_api_key
NEXT_PUBLIC_INSTAGRAM_ACCESS_TOKEN=your_instagram_token

# Email Service (for future implementation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Analytics (for future implementation)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# File Storage (for future implementation)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Redis (for caching, future implementation)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
